extends layout

block content
    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(ng-controller="TargetsController")
        h1.page-header Targets
        a(ng-click='viewActive()', href='javascript:;') Active Targets
        span &nbsp;|&nbsp;
        a(ng-click='viewDestroyed()', href='javascript:;') Destroyed Targets

        h4 Click on the map to create a new target for the selected spaceship
        .row
            .col-md-6
                select.form-control(ng-model="selectedShip" ng-options="ship.uuid as ship.name for ship in spaceships")
                br

        #map

    script(src='/js/controllers/TargetsController.js')
