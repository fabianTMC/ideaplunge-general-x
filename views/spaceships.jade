extends layout

block content
    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main(ng-controller="SpaceshipsController")
        h1.page-header Spaceships
        h4 Click add to create a new spaceship at the selected base
        .row
            .col-md-6
                .input-group
                    select.form-control(ng-model="selectedBase" ng-options="base.uuid as base.name for base in bases")
                    .input-group-btn
                        button.btn.btn-primary(ng-click='create()') Add
                br

        #map

    script(src='/js/controllers/SpaceshipsController.js')
